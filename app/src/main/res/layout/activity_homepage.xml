<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.rit.se.www.findmybus.HomepageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addbus"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="Add a Bus"
            android:textSize="36sp" />

        <Button
            android:id="@+id/trackbuses"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="Track a Bus"
            android:textSize="36sp" />

        <Button
            android:id="@+id/toggleVoiceAssistant"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="Toggle Voice Assisstant On"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
